<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<ScrollView
android:layout_width="wrap_content"
android:layout_height="wrap_content" >

<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="321dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

<TextView
android:id="@+id/textView1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_alignParentTop="true"
android:layout_marginLeft="14dp"
android:layout_marginTop="18dp"
android:textSize="22sp"
android:text="@string/addkiddo" />
<EditText
android:id="@+id/editText1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_below="@+id/textView1"
android:ems="10"
android:textSize="18sp"
android:hint="@string/name"
/>

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView1"
    android:layout_below="@+id/editText1"
    android:layout_marginTop="14dp"
    android:text="@string/dob"
    android:textSize="18sp" />

<TextView
android:id="@+id/textView3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/editText2"
android:layout_below="@+id/textView2"
android:layout_marginTop="26dp"
android:layout_marginLeft="10dp"
android:text="@string/imp" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/radioG"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="58dp"
    android:text="*If you have an image we&apos;ll add it" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView5"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="false"
    android:layout_centerVertical="false"
    android:text=" once we create your baby&apos;s profile" />

<Button
    android:id="@+id/button2"
    android:layout_width="100dp"
    android:layout_height="60dp"
    android:layout_alignBaseline="@+id/button1"
    android:layout_alignBottom="@+id/button1"
    android:layout_toRightOf="@+id/button1"
    android:text="@string/cancel" />

<Button
    android:id="@+id/button1"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/textView6"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/save"
    android:text="@string/save" />

<Spinner
    android:id="@+id/spinner1"
    android:layout_width="60sp"
    android:layout_height="30sp"
    android:layout_above="@+id/textView3"
    android:layout_toRightOf="@+id/textView2"
    android:entries="@array/date" />

<Spinner
    android:id="@+id/spinner2"
    android:layout_width="60sp"
    android:layout_height="30sp"
    android:layout_above="@+id/textView3"
    android:layout_toRightOf="@+id/spinner1"
    android:entries="@array/month" />

<Spinner
    android:id="@+id/spinner3"
    android:layout_width="60sp"
    android:layout_height="30sp"
    android:layout_above="@+id/textView3"
    android:layout_toRightOf="@+id/spinner2"
    android:entries="@array/year" />

<RadioGroup
    android:id="@+id/radioG"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="30dp"
    android:gravity="center" >

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="It&apos;s a Boy "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton1"
        android:layout_centerHorizontal="true"
        android:text=" OR" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" It&apos;s a Girl"
        android:textSize="20sp" />
</RadioGroup>

</RelativeLayout>
</ScrollView>
</LinearLayout>